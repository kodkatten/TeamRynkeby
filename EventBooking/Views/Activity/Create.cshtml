@using System.Web.Optimization
@using EventBooking.Controllers.ViewModels
@model EventBooking.Controllers.ViewModels.CreateActivityModel

@{
    ViewBag.Title = "Skapa event";
}

@section Styles
{
    @Styles.Render("~/Styles/CreateEvent")
}

@section Scripts
{
    @Scripts.Render("~/Scripts/CreateEvent")

    <script id="sessionTemplate" type="text/html">
        <div class="sessionRow">
            <div class="bootstrap-timepicker input-append">
                <input type="text" name="startTime" value="{{startTime}}" class="timepicker input-mini" />
                <span class="add-on"><i class="icon-time"></i></span>
            </div>
                    
                        
            <div class="bootstrap-timepicker input-append">
                <input type="text" name="endTime" value="{{endTime}}" class="timepicker input-mini" />
                <span class="add-on"><i class="icon-time"></i></span>
            </div>
                     
             <div>   
                <input type="number" name="minVolonteers" class="input-mini" min="0" />
            </div>
            <a href="#" class="undo"><i class="icon-remove"> </i> Släng</a>
        </div>
    </script>
}

    <h2>@ViewBag.Title</h2>

    <div class="span8">
        @using (Html.BeginForm("Create", "Activity", FormMethod.Post, new {@class = "form-horizontal"}))
        {
            <ul class="nav nav-pills">
                <li data-wizard-header="pageOne" class="active">
                    <a href="#">1. Beskrivning</a>
                </li>
                
                <li data-wizard-header="pageTwo">
                    <a href="#">2. Datum/Tid </a>
                </li>
                
                <li data-wizard-header="pageThree">
                    <a href="#">3. Materiel</a>
                </li>
            </ul>

            /***** PAGE ONE ******************** */
            <div data-wizard-page="pageOne">
                <div class="control-group">
                    <label class="control-label">Titel</label>
                    <div class="controls">
                        <input name="title" type="text" required="required" maxlength="50" placeholder="T.ex Insamling på T-station" />
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Publik beskrivning</label>
                    <div class="controls">
                        <textarea name="publicDescription" type="text" required="required" placeholder="Beskrivning som ses av alla"></textarea>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Intern beskrivning</label>
                    <div class="controls">
                        <textarea name="internalDescription" type="text" required="required" placeholder="Beskrivning för medlemmar"></textarea>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Typ</label>
                    <div class="controls">
                        <label class="radio">
                            <input name="type" type="radio" value="Träning" checked="checked" />
                            Träning</label>
                        <label class="radio">
                            <input name="type" type="radio" value="Publikt" />
                            Publikt</label>
                        <label class="radio">
                            <input name="type" type="radio" value="Teammöte" />
                            Teammöte</label>
                        <label class="radio">
                            <input name="type" type="radio" value="Sponsor" />
                            Sponsor</label>
                        <label class="radio">
                            <input name="type" type="radio" value="Preliminärt" />
                            Preliminärt</label>
                    </div>
                </div>

                <button class="btn pull-right btn-primary" data-wizard-link="pageTwo">Nästa</button>
            </div>


            /***** PAGE TWO ******************** */
            <div data-wizard-page="pageTwo">

                <div class="control-group">
                    <label class="control-label">Datum</label>
                    <div class="controls">
                        <input id="activityDate" type="text" name="date" required="required" placeholder="Välj datum" class="datepicker" />
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">Tid/Pass</label>
                    
                    <div class="controls">
                        <div id="sessionContainer">
                    
                            <div>
                                <p>Börjar</p>
                                <p>Slutar</p>
                                <p>Min deltagare</p>
                            </div>
                    
                            <div class="sessionRow">
                                <div class="bootstrap-timepicker input-append">
                                    <input name="startTime" value="12:00" type="text" class="timepicker input-mini" />
                                    <span class="add-on"><i class="icon-time"></i></span>
                                </div>
                    
                                <div class="bootstrap-timepicker input-append">
                                    <input name="endTime" value="14:00" type="text" class="timepicker input-mini" />
                                    <span class="add-on"><i class="icon-time"></i></span>
                                </div>
                        
                                <div>
                                    <input type="number" name="minVolonteers" class="input-mini" min="0" />
                                </div>
                            </div>
                        </div>    
                        <div>
                            <a id="addMoreSessions" href="#">Fler pass</a>      
                        </div>
                                                
                        <div id="overlappingWarning" class="alert alert-block" style="display:none">
                            <h4>Överlappande pass</h4>
                            <p>
                                Det är ett eller flera pass ovan som överlappar i tid eller som börjar för det slutar. 
                                Tyvärr lyckas vi inte hålla reda på passen när det är så. Hjälper du oss att fixa det 
                                så tar vi bortden här rutan och du kan gå vidare och välja materiel.
                            </p>
                            <p>
                                <strong>Gracias!</strong>
                            </p>
                        </div>
                    </div>
                </div>

                <button class="btn" data-wizard-link="pageOne">Föregående</button>
                <button class="btn pull-right btn-primary" data-wizard-link="pageThree">Nästa</button>
            </div>

            /***** PAGE THREE ******************** */
            <div data-wizard-page="pageThree">
                <div class="control-group">
                    <label class="control-label">Saker att ha med</label>
                    <div class="controls">

                        <select id="itemId" name="item">
                            <option value="0">Välj materiel</option>
                            <option value="">Something</option>
                        </select>

                        <input id="itemCount" type="number" class="input-mini" value="1" min="0" />

                        <p></p>
                        <a id="addMoreItems" href="#">Flera saker</a>
                    </div>
                </div>

                <button class="btn" data-wizard-link="pageTwo">Föregående</button>
                <button class="btn pull-right btn-success disabled" data-wizard-link="pageThree">Skapa</button>
            </div>
        }
    </div>
