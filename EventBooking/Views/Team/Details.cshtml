@model EventBooking.Controllers.ViewModels.TeamActivitiesModel

@{
    ViewBag.Title = "Team " + Model.Name;
}

<div class="page-header">
  <h1>@Model.Name</h1>
</div>

<div class="row">
    @foreach (var eventGroup in Model.Activities)
    {
        <div class="span6">

            <h3>@eventGroup.Key</h3>
            <ul>
                @foreach (var e in eventGroup)
                {
                    <li>
                        <span  class="badge badge-info">@e.Date.DayOfWeek @e.Date.Day</span>
                        @e.Name

                        <!-- TODO: add this when activity page exists Html.ActionLink(e.Name, "Details", "Activity");-->
                    </li>
                }
            </ul>
        </div>
    }
</div>

<div class="row">
    
    <div class="span12">
        <ul class="pager">
  <li class="previous">@Html.ActionLink("Tidigare", "Details", "Team", new { }, new { @class = "prev" })</li>
  <li class="next"> @Html.ActionLink("Senare", "Details", new { }, new { @class = "next" })</li>
</ul>
        
    </div>
    
</div>



