@using EventBooking.Data
@model EventBooking.Controllers.ViewModels.LandingPageModel

@{
    Layout = "~/Views/Shared/_LayoutWithBanner.cshtml";
    ViewBag.Title = "Team Rynkeby | Kommande aktiviter";
}

<div id="banner">
    <div id="expo">

        <div id="banner-info">
            <h3>Team Rynkeby</h3>
            <h3 class="hidden-phone">Kommande aktiviteter</h3>
            <h3 class="visible-phone">Vi kämpar för livet</h3>

            <ul class="hidden-phone">
                <li>
                    <span class="header-label label-city">Malmö</span><br />
                    <span class="header-label label-name rotate-right">A awsome activity</span>
                </li>
                <li>
                    <span class="header-label label-city">Malmö</span><br />
                    <span class="header-label label-name rotate-right">A awsome activity</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <div class="row-fluid banner-container">
        <div class="span12">
            @*<option value="@team.Id" selected="@{team.Id == this.Model.SelectedTeamId ? "True" : ""; }">@team.Name</option>*@

            @if (this.Model.IsNobody)
            {
                <!-- Team selector -->
                <select id="_teamSelector">
                </select>
            }

            <div class="span6">
                <h3>Kommande aktiviteter</h3>
                @Html.Action("Upcoming", "Activity")
            </div>

            <div class="span6">
                <h2>Team Rynkeby</h2>
                <p class="">
                    Team Rynkeby är ett nordiskt välgörenhetsinitiativ som syftar till att samla in pengar till Barncancerfonden i Sverige, Sylva i Finland och Børnecancerfonden i Danmark.
                </p>
                <p>
                    Varje sommar i juli cyklar 1.000 personer från Sverige, Finland och Danmark till Paris för att stödja barn med cancer och deras familjer. Under året deltar cyklister i olika team för att samla in sponsorpengar och arrangera olika events. Under året tränar även de olika teamen tillsammans som förberedelse inför cykelloppet till Paris.
                </p>
                <p>
                    Deltagarna i Team Rynkeby är motionscyklister, kvinnor och män, i alla åldrar med vitt skilda yrken, utbildningar och bakgrund. Deltagarnas olikheter och deras geografiska spridning i Sverige, Finland og Danmark gör det lättare för Team Rynkeby att sprida budskapet om insamlingen för barn med cancer och deras familjer.
                </p>
                <p>
                    2012 samlade Team Rynkeby in 18 Mkr i kampen mot barncancer.
                </p>
            </div>
        </div>
    </div>
</div>
@section scripts {

    <!-- Called when the selected team is changed. -->
    $(function() {
        $("#_teamSelector").change(function() {
            var teamId = $(this).val();
                window.location = '@Url.Action("Index", "Home")?teamId=' + teamId;
            });
        });
}
